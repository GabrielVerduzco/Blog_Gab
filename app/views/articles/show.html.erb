<h1> <%=  @article.title  %></h1>
<p> <%=  @article.body  %></p>
<% unless @article.user.nil? %>

<p>Written by <%=  @article.user.email  %></p>

<% end %>

<div>
  <h3> Comments: </h3>
  <%= render "comments/form" %>
</div>

<ul>
  <%= @article.comments.each do |comment| %>
  <li>
    <%= comment.body %> By <%= comment.user.email %>
  </li>
  <% end %>
</ul>


<%= link_to "Edit!", edit_article_path(@article) %>

